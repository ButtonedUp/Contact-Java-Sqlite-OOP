<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="#1D41BF"
        android:text="Contact"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:elevation="6dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameEditTextID"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phoneEditTextID"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Enter Phone"
        android:inputType="phone"
        android:padding="10dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailEditTextID"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/addDataButtonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1D41BF"
        android:text="ADD DATA"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="6dp" />

    <Button
        android:id="@+id/displayAllDataButtonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1D41BF"
        android:text="Display All Data"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/IdEditTextID"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="@string/required_for_update_or_delete_only"
        android:inputType="number"
        android:padding="10dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/updateDataButtonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1DBF38"
        android:text="Update Data"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="6dp" />

    <Button
        android:id="@+id/deleteDataButtonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BF0000"
        android:text="Delete Data"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="6dp" />

    <Button
        android:id="@+id/deleteAllDataButtonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BF0000"
        android:elevation="6dp"
        android:minHeight="48dp"
        android:text="Delete All Data"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />



</LinearLayout>
